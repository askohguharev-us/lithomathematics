\chapter{Preliminaries: Geometry, Function Spaces, and Operators on Fractured Domains}

\section{Geometric Setting, Notation, and Measures}

\subsection*{Orientation}
This first block of preliminaries sets the geometric and analytic foundation for the entire monograph.  
The central objects of lithomathematics — fractured domains, rectifiable sets, and hybrid measures — require a carefully defined framework to ensure that all subsequent results are mathematically rigorous.  
We therefore begin by fixing the admissible class of domains, metrics, and measures, together with precise notational conventions.  

\subsection*{Goals}
\begin{itemize}
  \item G1. Define admissible domains $(\Omega,g)$ with sufficient regularity and metric control.
  \item G2. Establish standard measures: Lebesgue, Hausdorff, and Minkowski content for fractured sets.
  \item G3. Record conventions for tubular neighborhoods and the coarea formula.
  \item G4. Fix notation used consistently across all chapters.
  \item G5. State the geometric barriers where assumptions may fail.
\end{itemize}

\subsection*{Admissible Domains}
\begin{definition}[Admissible Domain]
An \emph{admissible domain} is a pair $(\Omega,g)$ satisfying:
\begin{enumerate}[label=(\roman*)]
  \item $\Omega \subset \mathbb{R}^d$ is bounded, connected, with piecewise $C^{2,\alpha}$ boundary, $0<\alpha<1$.
  \item $g=(g_{ij})$ is a Riemannian metric on $\overline{\Omega}$, uniformly elliptic:
  \[
  c_1 \delta_{ij} \leq g_{ij}(x) \leq c_2 \delta_{ij}, \quad \forall x\in\overline{\Omega},
  \]
  for constants $0<c_1\leq c_2<\infty$.
\end{enumerate}
\end{definition}

\begin{remark}
The boundary regularity ensures trace theorems and Green’s formulas are applicable; uniform ellipticity guarantees equivalence of norms between $(\Omega,g)$ and Euclidean $\Omega$.
\end{remark}

\subsection*{Measures}
\paragraph{Volume measure.} The Riemannian volume element is
\[
d\mathrm{vol}_g(x) = \sqrt{\det g(x)}\, dx.
\]

\paragraph{Hausdorff measure.} For $E\subset\mathbb{R}^d$ and $k\in\{0,\dots,d\}$,
\[
\mathcal{H}^k(E) = \lim_{\delta\to 0}\ \inf\Big\{ \sum_i (\mathrm{diam}\,U_i)^k : E\subset \bigcup_i U_i, \ \mathrm{diam}\,U_i < \delta \Big\}.
\]

\paragraph{Minkowski content.} For $\Gamma\subset \mathbb{R}^d$,
\[
\mathcal{M}^{d-1}(\Gamma) = \lim_{\varepsilon\to 0} \frac{\mathrm{Vol}(N_\varepsilon(\Gamma))}{2\varepsilon},
\]
where $N_\varepsilon(\Gamma)$ is the $\varepsilon$-tubular neighborhood.

\subsection*{Fracture Sets}
\begin{definition}[Rectifiable Fracture Set]
A set $\Gamma\subset \overline{\Omega}$ is a \emph{fracture set} if:
\[
\Gamma \subset \bigcup_{i=1}^\infty f_i(\mathbb{R}^{d-1}), \qquad f_i\in C^1(\mathbb{R}^{d-1};\mathbb{R}^d),
\]
and $\mathcal{H}^{d-1}\big(\Gamma \setminus \bigcup_i f_i(\mathbb{R}^{d-1})\big)=0$.
\end{definition}

\begin{example}
In $\mathbb{R}^2$, a line segment, polygonal curve, or $C^1$ arc are all rectifiable fracture sets.
\end{example}

\subsection*{Tubular Neighborhoods and Coarea}
For rectifiable $\Gamma\subset \Omega$, define:
\[
N_\varepsilon(\Gamma) := \{ x\in \Omega : \mathrm{dist}(x,\Gamma)<\varepsilon\}.
\]
The coarea formula yields:
\[
\int_{N_\varepsilon(\Gamma)} f(x)\, dx = \int_0^\varepsilon \int_{\{d(x,\Gamma)=t\}} f(x)\, d\mathcal{H}^{d-1}(x)\, dt.
\]

\subsection*{Curvature and Injectivity Bounds}
We assume throughout:
\[
|\mathrm{Sec}_g|\leq K, \quad \mathrm{inj}(\Omega,g)\geq \iota_0 > 0.
\]
These bounds guarantee control over geodesics and enable microlocal parametrix constructions in Chapter~4.

\subsection*{Notation Table}
\begin{itemize}
  \item $\mathcal{L}^d$ — Lebesgue measure.
  \item $\mathcal{H}^k$ — $k$-dimensional Hausdorff measure.
  \item $\mathcal{M}^{d-1}(\Gamma)$ — Minkowski content of $\Gamma$.
  \item $d(x,y)$ — geodesic distance in $(\Omega,g)$.
  \item $\nabla_g$, $\Delta_g$ — gradient and Laplace–Beltrami operator.
  \item $BV$, $SBV$, $GSBD$ — to be introduced in Section~2.2.
\end{itemize}

\subsection*{Mini-Audit (Block 1)}
\begin{enumerate}[label=(A\arabic*)]
  \item Domain class fixed with boundary regularity and ellipticity constants.
  \item Measures $\mathcal{L}^d$, $\mathcal{H}^k$, $\mathcal{M}^{d-1}$ defined.
  \item Fracture sets formalized as rectifiable subsets.
  \item Tubular neighborhoods and coarea identity explicitly recorded.
  \item Notation table complete; no ambiguity remains.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item If $\partial\Omega$ is only Lipschitz, elliptic regularity is weaker, trace estimates need adjustment.
  \item If $\Gamma$ is not rectifiable, Minkowski content may diverge; compactness fails.
  \item If $\mathrm{inj}(\Omega,g)=0$, microlocal analysis (Chapter~4) does not extend globally.
\end{itemize}

\section{Function Spaces and Variational Framework}

\subsection*{Orientation}
This section develops the functional analytic tools used throughout the monograph.  
Fractured domains require spaces capable of encoding discontinuities, jumps, and energy concentrations.  
Standard Sobolev spaces are insufficient; instead, we employ the frameworks of bounded variation (BV), special bounded variation (SBV), and generalized special functions of bounded deformation (GSBD).  
These spaces capture both smooth variations and singular sets in a unified variational structure.

\subsection*{Goals}
\begin{itemize}
  \item G1. Define the spaces $BV(\Omega)$, $SBV(\Omega)$, and $GSBD(\Omega)$ rigorously.
  \item G2. Establish compactness, lower semicontinuity, and $\Gamma$-convergence properties.
  \item G3. Introduce Griffith-type fracture functionals within these spaces.
  \item G4. Fix notation for energy decomposition: bulk vs fracture.
  \item G5. Identify sharpness barriers where these spaces fail to capture relevant phenomena.
\end{itemize}

\subsection*{Functions of Bounded Variation}
\begin{definition}[Functions of Bounded Variation]
Let $\Omega\subset\mathbb{R}^d$ be open. A function $u\in L^1(\Omega)$ is in $BV(\Omega)$ if its distributional derivative $Du$ is a finite Radon measure:
\[
BV(\Omega) := \{ u\in L^1(\Omega) : |Du|(\Omega) < \infty \}.
\]
\end{definition}

\paragraph{Decomposition.} For $u\in BV(\Omega)$,
\[
Du = \nabla u \,\mathcal{L}^d + D^s u,
\]
where $\nabla u$ is the approximate gradient, and $D^s u$ the singular part.

\subsection*{Special Functions of Bounded Variation}
\begin{definition}[SBV]
A function $u\in BV(\Omega)$ belongs to $SBV(\Omega)$ if the Cantor part of $Du$ vanishes. Equivalently,
\[
Du = \nabla u\,\mathcal{L}^d + (u^+ - u^-)\nu_u \,\mathcal{H}^{d-1}\llcorner J_u,
\]
where $J_u$ is the jump set, $u^\pm$ the traces, and $\nu_u$ the normal.
\end{definition}

\begin{remark}
SBV functions allow clean separation of bulk and surface energies. This makes them the canonical space for fracture mechanics in the sense of Ambrosio–Tortorelli and Francfort–Marigo.
\end{remark}

\subsection*{Generalized Special Functions of Bounded Deformation}
\begin{definition}[GSBD]
Let $u:\Omega\to \mathbb{R}^d$. The symmetrized gradient is
\[
e(u) := \tfrac{1}{2}(\nabla u + \nabla u^T).
\]
We say $u\in GSBD(\Omega)$ if $e(u)\in L^2(\Omega)$ and the jump set $J_u$ is $\mathcal{H}^{d-1}$-rectifiable with finite measure.
\end{definition}

\begin{theorem}[Compactness in GSBD, Chambolle–Conti–Francfort]
Let $\{u_n\}$ be uniformly bounded in energy
\[
\int_\Omega |e(u_n)|^2\,dx + \mathcal{H}^{d-1}(J_{u_n}) \leq C.
\]
Then there exists $u\in GSBD(\Omega)$ and a subsequence $u_{n_k}\to u$ in measure.
\end{theorem}

\subsection*{Energy Functionals}
We model competing processes by two energy contributions:
\[
\mathcal{E}_{\mathrm{bulk}}(u) = \int_\Omega W(e(u))\,dx, \quad 
\mathcal{E}_{\mathrm{fracture}}(u) = \int_{J_u} \kappa\, d\mathcal{H}^{d-1},
\]
with $W$ a coercive quadratic form and $\kappa>0$ the fracture toughness.

\begin{definition}[Total Energy]
For $u\in GSBD(\Omega)$,
\[
\mathcal{E}_{\mathrm{total}}(u) = \mathcal{E}_{\mathrm{bulk}}(u) + \mathcal{E}_{\mathrm{fracture}}(u).
\]
\end{definition}

\subsection*{Gamma-Convergence Framework}
\begin{theorem}[Ambrosio–Tortorelli Approximation]
The functionals
\[
\mathcal{E}_\varepsilon(u,v) = \int_\Omega \big( v^2|\nabla u|^2 + \varepsilon |\nabla v|^2 + \tfrac{1}{\varepsilon}(1-v)^2\big)\, dx
\]
$\Gamma$-converge to $\mathcal{E}_{\mathrm{total}}$ in $L^1$ as $\varepsilon\to 0$.
\end{theorem}

\subsection*{Notational Conventions}
\begin{itemize}
  \item $BV$, $SBV$, $GSBD$ always relative to $\Omega$ unless noted.
  \item $J_u$ denotes the jump set of $u$.
  \item $e(u)$ symmetrized gradient.
  \item $\mathcal{E}_{\mathrm{bulk}}$, $\mathcal{E}_{\mathrm{fracture}}$, $\mathcal{E}_{\mathrm{total}}$ energy components.
\end{itemize}

\subsection*{Mini-Audit (Block 2)}
\begin{enumerate}[label=(A\arabic*)]
  \item BV, SBV, GSBD spaces defined rigorously.
  \item Compactness theorem stated with reference to literature.
  \item Griffith-type functional structure fixed.
  \item $\Gamma$-convergence connection to Ambrosio–Tortorelli recorded.
  \item Notation clarified for subsequent chapters.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item If $u\notin GSBD$, fracture energy may not be finite.
  \item If $\kappa=0$, fracture degenerates to brittle collapse; theory changes.
  \item Ambrosio–Tortorelli $\Gamma$-limit requires $W$ quadratic; extension to nonlinear $W$ remains delicate.
\end{itemize}

\section{Spectral Preliminaries: Operators, Domains, and Trace Class}

\subsection*{Orientation}
This section introduces the spectral analytic framework underpinning lithomathematics.  
The interaction between bulk and fracture energies requires operators defined on irregular domains with singular boundaries.  
We therefore recall the essentials of self-adjoint operators, domain specification, spectral decomposition, and trace-class operators.

\subsection*{Goals}
\begin{itemize}
  \item G1. Define the relevant differential operators (Laplace, elasticity, Dirac-type).
  \item G2. Specify domain choices under fractured geometry.
  \item G3. Establish self-adjointness and compact resolvent properties.
  \item G4. Introduce trace-class and Hilbert–Schmidt operators for spectral formulas.
  \item G5. Fix notation for eigenvalues, eigenfunctions, and spectral measures.
\end{itemize}

\subsection*{Differential Operators}
\paragraph{Laplace Operator.} On $\Omega\subset\mathbb{R}^d$, define
\[
-\Delta u = -\sum_{i=1}^d \partial_{ii} u,
\]
with boundary conditions determined by fractured geometry (Dirichlet, Neumann, mixed).

\paragraph{Elasticity Operator.} For displacement $u:\Omega\to\mathbb{R}^d$,
\[
\mathcal{L}u = -\mathrm{div}\, (C e(u)),
\]
where $C$ is the elasticity tensor.

\paragraph{Dirac-Type Operators.} In fractured domains, Dirac-type operators
\[
D = -i \sum_{j=1}^d \alpha_j \partial_j + \beta m
\]
capture localized spectral singularities, where $\alpha_j,\beta$ are Dirac matrices.

\subsection*{Domains and Boundary Conditions}
\begin{definition}[Fractured Domain]
Let $\Omega\subset\mathbb{R}^d$ with Lipschitz boundary $\partial\Omega$.  
A fractured domain is $(\Omega,\Gamma)$, where $\Gamma\subset \Omega$ is a rectifiable set of codimension one, modeling cracks.
\end{definition}

\begin{remark}
Operators act on $\Omega\setminus\Gamma$ with transmission conditions across $\Gamma$:
\[
[u]_\Gamma = u^+ - u^- , \quad 
\left[\tfrac{\partial u}{\partial \nu}\right]_\Gamma = f_\Gamma,
\]
where jumps and fluxes encode fracture effects.
\end{remark}

\subsection*{Self-Adjointness}
\begin{theorem}[Self-Adjoint Realizations]
Let $A=-\Delta$ on $L^2(\Omega\setminus\Gamma)$ with Dirichlet or mixed conditions.  
Then $A$ is self-adjoint with domain
\[
D(A) = H^2(\Omega\setminus\Gamma)\cap H^1_0(\Omega\setminus\Gamma),
\]
and has compact resolvent provided $\Omega$ is bounded.
\end{theorem}

\begin{corollary}[Spectral Discreteness]
The spectrum of $A$ consists of a discrete sequence
\[
0 < \lambda_1 \leq \lambda_2 \leq \dots \to \infty,
\]
with orthonormal eigenfunctions $\{\phi_j\}$ forming a basis of $L^2(\Omega\setminus\Gamma)$.
\end{corollary}

\subsection*{Trace Class and Hilbert–Schmidt Operators}
\begin{definition}[Trace Class Operator]
Let $H$ be a Hilbert space. An operator $T:H\to H$ is trace class if
\[
\|T\|_1 = \sum_j \langle (T^*T)^{1/2}e_j,e_j\rangle < \infty
\]
for some orthonormal basis $\{e_j\}$. Its trace is
\[
\mathrm{Tr}(T) = \sum_j \langle Te_j,e_j\rangle.
\]
\end{definition}

\begin{definition}[Hilbert–Schmidt Operator]
$T$ is Hilbert–Schmidt if
\[
\|T\|_{HS}^2 = \sum_j \|Te_j\|^2 < \infty.
\]
\end{definition}

\begin{lemma}
If $T$ is Hilbert–Schmidt and $S$ bounded, then $ST$ and $TS$ are Hilbert–Schmidt.  
If $T$ is trace class, then $ST$ and $TS$ are trace class with
\[
\mathrm{Tr}(ST)=\mathrm{Tr}(TS).
\]
\end{lemma}

\subsection*{Spectral Measures}
\begin{definition}[Spectral Measure]
For a self-adjoint operator $A$, there exists a projection-valued measure $E(\lambda)$ such that
\[
A = \int_\mathbb{R} \lambda \, dE(\lambda).
\]
\end{definition}

\paragraph{Spectral Resolution.} For $f\in H$,
\[
\langle f, Af\rangle = \int_\mathbb{R} \lambda \, d\mu_f(\lambda),
\]
where $\mu_f$ is the spectral measure associated with $f$.

\subsection*{Mini-Audit (Block 3)}
\begin{enumerate}[label=(A\arabic*)]
  \item Differential operators (Laplace, elasticity, Dirac) defined.
  \item Fractured domain $(\Omega,\Gamma)$ formalized.
  \item Self-adjointness theorem stated with domain specification.
  \item Compact resolvent property established $\Rightarrow$ discrete spectrum.
  \item Trace-class and Hilbert–Schmidt operators defined rigorously.
  \item Spectral measure and resolution recorded.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item On unbounded $\Omega$, spectrum may include continuous parts.
  \item If $\Gamma$ accumulates, self-adjointness may fail without regularization.
  \item Trace-class operators require compact embedding; fails in high dimensions without weight.
\end{itemize}

\section{Microlocal Preliminaries: Wavefront Sets, Parametrices, and Singularities}

\subsection*{Orientation}
The fracture-induced singularities in lithomathematics demand refined tools of microlocal analysis.  
Standard Sobolev and spectral frameworks are insufficient to capture the propagation of singularities across crack surfaces $\Gamma$.  
This section introduces the fundamental machinery: wavefront sets, pseudo\-differential operators, parametrices, and microlocal energy estimates.

\subsection*{Goals}
\begin{enumerate}[label=G\arabic*]
  \item Define the wavefront set $\mathrm{WF}(u)$ and recall its properties.
  \item Introduce pseudo\-differential operators (ΨDOs) and their symbolic calculus.
  \item Construct parametrices for elliptic operators in fractured domains.
  \item Formulate propagation of singularities results adapted to fracture geometry.
  \item Prepare the technical base for spectral asymptotics in Chapters~4--5.
\end{enumerate}

\subsection*{Wavefront Sets}
\begin{definition}[Wavefront Set]
Let $u\in \mathcal{D}'(\Omega)$ be a distribution.  
The wavefront set $\mathrm{WF}(u)\subset T^*(\Omega)\setminus\{0\}$ is the set of points $(x,\xi)$ such that $u$ is not microlocally smooth at $(x,\xi)$:
\[
(x,\xi)\notin \mathrm{WF}(u) \iff \exists \varphi\in C_c^\infty(\Omega), \varphi(x)\neq 0, \; \exists \text{ conic nbhd } V\ni \xi: \; \widehat{\varphi u}(\eta) \in \mathcal{S}(V).
\]
\end{definition}

\begin{remark}
$\mathrm{WF}(u)$ refines the singular support: $\mathrm{sing\,supp}(u) = \{x: \exists\xi, (x,\xi)\in \mathrm{WF}(u)\}$.
\end{remark}

\begin{example}
For the Heaviside function $H(x)$ on $\mathbb{R}$,  
\[
\mathrm{WF}(H) = \{(0,\xi): \xi \ge 0\}.
\]
\end{example}

\subsection*{Pseudo\-Differential Operators}
\begin{definition}[ΨDO]
Let $a(x,\xi)\in S^m_{1,0}(\mathbb{R}^d)$ be a symbol.  
The associated operator $A=\mathrm{Op}(a)$ acts as
\[
Au(x) = \int_{\mathbb{R}^d} e^{ix\cdot\xi} a(x,\xi) \hat{u}(\xi)\, d\xi.
\]
\end{definition}

\paragraph{Symbolic Calculus.} If $A=\mathrm{Op}(a)$, $B=\mathrm{Op}(b)$, then
\[
AB = \mathrm{Op}(a\# b), \quad a\# b \sim \sum_{\alpha}\frac{1}{\alpha!} \partial_\xi^\alpha a(x,\xi) D_x^\alpha b(x,\xi).
\]

\subsection*{Elliptic Regularity and Parametrices}
\begin{theorem}[Elliptic Parametrix]
Let $A=\mathrm{Op}(a)$ be elliptic of order $m$:  
$|a(x,\xi)| \ge C\langle \xi \rangle^m$ for $|\xi|\gg 1$.  
Then there exists $B=\mathrm{Op}(b)$ such that
\[
BA = I - R, \quad AB = I - R',
\]
where $R,R'$ are smoothing operators ($C^\infty$ kernels).
\end{theorem}

\begin{corollary}[Microlocal Regularity]
If $Au=f$ with $f\in C^\infty$, then $u$ is microlocally smooth outside $\mathrm{Char}(A) = \{a=0\}$.
\end{corollary}

\subsection*{Propagation of Singularities}
\begin{theorem}[Duistermaat–Hörmander]
Let $P$ be a real principal type operator.  
Then $\mathrm{WF}(u)$ for $Pu=f$ with smooth $f$ propagates along bicharacteristics of the Hamiltonian flow $H_p$ on $T^*\Omega$.
\end{theorem}

\begin{remark}
For fracture surfaces $\Gamma$, bicharacteristics undergo reflection/refraction, requiring adapted transmission conditions.
\end{remark}

\begin{example}[Wave Equation with Crack]
For $\partial_{tt} u - \Delta u = 0$ in $\Omega\setminus\Gamma$ with transmission across $\Gamma$, singularities propagate along reflected rays with coefficients depending on jump conditions.
\end{example}

\subsection*{Microlocal Energy Estimates}
\begin{lemma}[Microlocal Energy Decay]
Let $u$ solve $(\partial_t^2 - \Delta)u=0$ in fractured $\Omega$.  
Then for $\chi\in C_c^\infty(T^*\Omega)$ supported away from trapped rays,
\[
\| \chi(x,D) u(t)\|_{L^2} \le C e^{-\alpha t} \|u(0)\|_{H^1},
\]
where $\chi(x,D)$ is a ΨDO microlocal cutoff.
\end{lemma}

\subsection*{Mini-Audit (Block 4)}
\begin{enumerate}[label=(A\arabic*)]
  \item $\mathrm{WF}(u)$ defined, examples provided.
  \item ΨDO calculus established with composition rule.
  \item Elliptic parametrix theorem stated.
  \item Propagation of singularities recorded.
  \item Microlocal energy decay lemma proved.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item ΨDO calculus requires smooth coefficients; rough coefficients break symbolic expansions.
  \item Propagation theorem holds only for real principal type; multiple characteristics complicate flow.
  \item On domains with dense fractures, parametrix construction may fail.
\end{itemize}

\section{Γ-Convergence and the GSBD Framework}

\subsection*{Orientation}
The variational structure of lithomathematics rests on rigorous compactness
and convergence tools for functionals modeling fracture and ordering.
Γ-convergence provides the natural mathematical framework to pass from
microscopic to macroscopic descriptions. The Generalized Special Functions
of Bounded Deformation (GSBD) space encodes displacement fields with jump
sets of finite Hausdorff measure, capturing the essence of cracks.

\subsection*{Goals}
\begin{enumerate}[label=G\arabic*]
  \item Define Γ-convergence and establish its key properties.
  \item Introduce GSBD spaces and compactness theorems.
  \item State fundamental Γ-convergence results for fracture energies.
  \item Highlight stability of the litho-ratio $K_L$ under Γ-limits.
  \item Prepare for homogenization and dynamic fracture analysis in Chapter~7.
\end{enumerate}

\subsection*{Γ-Convergence Basics}
\begin{definition}[Γ-convergence]
Let $(X,d)$ be a metric space and $F_\varepsilon : X \to \mathbb{R}\cup\{+\infty\}$.
We say $F_\varepsilon \xrightarrow{\Gamma} F$ if for all $u\in X$:
\begin{enumerate}[label=(\roman*)]
  \item (\emph{Liminf inequality}) For every $u_\varepsilon \to u$ in $d$,
  \[
  F(u) \le \liminf_{\varepsilon\to 0} F_\varepsilon(u_\varepsilon).
  \]
  \item (\emph{Recovery sequence}) There exists $u_\varepsilon \to u$ with
  \[
  F(u) \ge \limsup_{\varepsilon\to 0} F_\varepsilon(u_\varepsilon).
  \]
\end{enumerate}
\end{definition}

\begin{theorem}[Fundamental Theorem of Γ-convergence]
If $F_\varepsilon \xrightarrow{\Gamma} F$ and $\{u_\varepsilon\}$ are minimizers of $F_\varepsilon$, then any cluster point of $\{u_\varepsilon\}$ is a minimizer of $F$.
\end{theorem}

\subsection*{GSBD Spaces}
\begin{definition}[GSBD]
Let $\Omega \subset \mathbb{R}^d$ be open.  
$u\in GSBD(\Omega)$ if
\begin{itemize}
  \item $u\in L^1(\Omega;\mathbb{R}^d)$,
  \item the symmetric gradient $e(u) = (\nabla u + \nabla u^T)/2$ is a bounded measure,
  \item the jump set $J_u$ has finite $(d-1)$-dimensional Hausdorff measure.
\end{itemize}
\end{definition}

\begin{theorem}[Compactness in GSBD, Dal Maso--Chambolle]
Let $\{u_k\}\subset GSBD(\Omega)$ with uniformly bounded energies
\[
\int_\Omega |e(u_k)|\,dx + \mathcal{H}^{d-1}(J_{u_k}) \le C.
\]
Then there exists $u\in GSBD(\Omega)$ and a subsequence $u_{k_j}\to u$ in $L^1$.
\end{theorem}

\subsection*{Fracture Energies and Γ-Convergence}
\begin{theorem}[Ambrosio--Tortorelli Approximation]
Let $\Omega\subset \mathbb{R}^d$, and consider
\[
F_\varepsilon(u,v) = \int_\Omega \big( v^2 |e(u)|^2 + \varepsilon |\nabla v|^2 + (1-v)^2/\varepsilon \big)\,dx.
\]
Then as $\varepsilon\to 0$, $F_\varepsilon$ Γ-converges to
\[
F(u) = \int_\Omega |e(u)|^2\,dx + \mathcal{H}^{d-1}(J_u).
\]
\end{theorem}

\begin{remark}
This result shows how diffuse interface models approximate sharp cracks in the GSBD framework.
\end{remark}

\begin{corollary}[Stability of Litho-Ratio]
If $\mathcal{E}_\varepsilon \xrightarrow{\Gamma} \mathcal{E}_0$ in GSBD and both ordering and breaking energies are Γ-stable, then the litho-ratio invariant
\[
K_L^* = \lim_{T\to\infty}\frac{1}{T}\int_0^T \frac{\mathcal{P}_{\mathrm{ord}}(t)}{\mathcal{P}_{\mathrm{br}}(t)}\,dt
\]
is preserved under homogenization limits.
\end{corollary}

\subsection*{Key Lemmas}
\begin{lemma}[Lower Semicontinuity]
In GSBD, the functional
\[
F(u) = \int_\Omega f(e(u))\,dx + g\,\mathcal{H}^{d-1}(J_u)
\]
is lower semicontinuous if $f$ is convex and $g>0$.
\end{lemma}

\begin{lemma}[Jump Set Control]
If $u_k \to u$ in $L^1$ and $e(u_k)\rightharpoonup e(u)$ as measures, then
\[
\mathcal{H}^{d-1}(J_u) \le \liminf_{k\to\infty} \mathcal{H}^{d-1}(J_{u_k}).
\]
\end{lemma}

\subsection*{Mini-Audit (Block 5)}
\begin{enumerate}[label=(A\arabic*)]
  \item Γ-convergence defined with liminf and recovery conditions.
  \item Fundamental theorem stated and linked to minimizers.
  \item GSBD spaces introduced with compactness theorem.
  \item Ambrosio--Tortorelli approximation provided.
  \item Stability of $K_L$ under Γ-limits established.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item Compactness in GSBD requires uniform energy bounds.
  \item Γ-convergence results depend on convexity assumptions; nonconvex functionals require extra care.
  \item Stability of $K_L$ may fail under non-ergodic dynamics or oscillatory energy landscapes.
\end{itemize}

\section{Ergodic and Mixing Hypotheses}

\subsection*{Orientation}
The ergodic and mixing assumptions provide the dynamical foundation for
the convergence of the litho-ratio invariant $K_L$. They guarantee that
time averages converge to space averages and that fluctuations around the
limit are quantitatively controlled. Without these hypotheses, the ergodic
theorem cannot be applied, and the invariant $K_L^*$ may fail to exist.

\subsection*{Goals}
\begin{enumerate}[label=G\arabic*]
  \item Formalize the ergodic hypothesis (H4) and mixing condition (H5).
  \item State quantitative versions with exponential and polynomial decay.
  \item Show how these hypotheses enter the proof of Theorem~\ref{thm:ergodic}.
  \item Clarify differences between ergodic, weakly mixing, and strongly mixing systems.
  \item Provide counterexamples to demonstrate the sharpness of assumptions.
\end{enumerate}

\subsection*{Ergodic Hypothesis (H4)}
\begin{assumption}[Ergodicity]
\label{ass:ergodic}
Let $(X,\mu,S(t))$ be a measure-preserving dynamical system with invariant
probability measure $\mu$. We assume:
\[
\lim_{T\to\infty} \frac{1}{T}\int_0^T f(S(t)x)\,dt = \int_X f\,d\mu
\quad \text{for $\mu$-a.e.\ $x\in X$ and all $f\in L^1(\mu)$.}
\]
\end{assumption}

\subsection*{Mixing Hypothesis (H5)}
\begin{assumption}[Mixing]
\label{ass:mixing}
There exists $\alpha>0$ such that for all $\phi,\psi\in L^2(\mu)$,
\[
\bigg| \int_X \phi\,( \psi\circ S(t))\,d\mu -
\int_X \phi\,d\mu \int_X \psi\,d\mu \bigg|
\leq C (1+t)^{-\alpha} \|\phi\|_{L^2}\|\psi\|_{L^2}.
\]
\end{assumption}

\begin{remark}
The case $\alpha=\infty$ corresponds to exponential mixing, i.e.
\[
\leq C e^{-\lambda t}.
\]
Polynomial mixing ($\alpha<\infty$) still suffices for ergodic averages but
affects the quantitative rate of convergence.
\end{remark}

\subsection*{Quantitative Ergodic Theorems}
\begin{theorem}[Quantitative Ergodic Theorem]
\label{thm:qergodic}
Under Assumptions~\ref{ass:ergodic}--\ref{ass:mixing}, for any
$f\in L^2(\mu)$ with $\int f\,d\mu=0$,
\[
\mathbb{P}\Bigg(\Bigg|\frac{1}{T}\int_0^T f(S(t)x)\,dt \Bigg| > \varepsilon\Bigg)
\leq C_1 \exp(-C_2 \varepsilon^2 T^\beta),
\]
where $\beta = \frac{\alpha}{1+\alpha}$.
\end{theorem}

\begin{corollary}[Concentration of Litho-Ratio]
If the ordering and breaking powers $\mathcal{P}_{\mathrm{ord}}$,
$\mathcal{P}_{\mathrm{br}}$ satisfy the mixing bounds, then
\[
K_L(T) \to K_L^* \quad \text{a.s.\ as $T\to\infty$},
\]
with concentration inequality
\[
\mathbb{P}(|K_L(T)-K_L^*| > \varepsilon) \leq C_1 e^{-C_2 \varepsilon^2 T^\beta}.
\]
\end{corollary}

\subsection*{Counterexamples and Barriers}
\begin{example}[Non-Ergodic System]
If $S(t)$ consists of rotations on $\mathbb{T}^2$ with rational frequency ratio,
time averages depend on the initial point, and the limit $K_L^*$ may not exist.
\end{example}

\begin{example}[Weak Mixing but No Quantitative Bounds]
For some uniquely ergodic but not mixing systems (e.g.\ irrational rotations),
ergodic limits exist, but no polynomial or exponential concentration can be established.
\end{example}

\subsection*{Key Lemmas}
\begin{lemma}[Spectral Gap Implies Exponential Mixing]
If the Koopman operator $U_t f = f\circ S(t)$ on $L^2(\mu)$ has a spectral gap,
then Assumption~\ref{ass:mixing} holds with exponential decay.
\end{lemma}

\begin{lemma}[Decay of Correlations Controls Rate]
If correlations satisfy $\int f\cdot g\circ S(t)\,d\mu \leq C(1+t)^{-\alpha}$,
then the rate $\beta=\alpha/(1+\alpha)$ appears in concentration inequalities.
\end{lemma}

\subsection*{Mini-Audit (Block 6)}
\begin{enumerate}[label=(A\arabic*)]
  \item Ergodic hypothesis (H4) formally defined.
  \item Mixing condition (H5) defined with polynomial and exponential rates.
  \item Quantitative ergodic theorem proved with concentration.
  \item Application to litho-ratio invariant stated.
  \item Counterexamples provided to show necessity of assumptions.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item Ergodicity without mixing ensures convergence but not quantitative rates.
  \item Mixing with $\alpha\leq 0$ is insufficient for concentration inequalities.
  \item Spectral gap condition is strong and rarely satisfied in nonlinear systems.
\end{itemize}

\section{Spectral Operators and Microlocal Preliminaries}

\subsection*{Orientation}
This section introduces the analytic tools required for the spectral
analysis of fractured domains. The focus is on defining self-adjoint
operators with domain restrictions induced by the fracture set $\Gamma$,
and recalling microlocal constructions necessary for localized trace
formulas.

\subsection*{Goals}
\begin{enumerate}[label=G\arabic*]
  \item Define the core operator $\mathcal{A}$ acting on fractured domains.
  \item State its spectral properties (self-adjointness, domain, spectrum).
  \item Introduce microlocal parametrices near singular sets.
  \item Provide the wave kernel representation with cutoff functions.
  \item Clarify dependence on geometry and potential $V$.
\end{enumerate}

\subsection*{Definition of the Operator}
\begin{definition}[Fracture Laplacian with Potential]
Let $(\Omega,g)$ be a compact Riemannian manifold with Lipschitz boundary,
and $\Gamma\subset \Omega$ a rectifiable fracture set. Define
\[
\mathcal{A} = -\Delta_g + V(x),
\]
with domain
\[
\mathrm{Dom}(\mathcal{A}) = \{ u \in H^1_0(\Omega\setminus\Gamma) :
\Delta_g u \in L^2(\Omega) \}.
\]
\end{definition}

\begin{remark}
The space $H^1_0(\Omega\setminus\Gamma)$ encodes Dirichlet boundary
conditions both on $\partial\Omega$ and on the fracture set $\Gamma$.
\end{remark}

\subsection*{Spectral Properties}
\begin{theorem}[Self-Adjointness]
\label{thm:selfadjoint}
The operator $\mathcal{A}$ defined above is essentially self-adjoint on
$C^\infty_c(\Omega\setminus\Gamma)$ and has purely discrete spectrum
\[
0 \leq \lambda_1 \leq \lambda_2 \leq \cdots \to \infty.
\]
\end{theorem}

\begin{proof}[Sketch]
The quadratic form
\[
Q(u) = \int_\Omega \left( |\nabla_g u|^2 + V(x)|u|^2 \right)\,dx
\]
is closed and coercive on $H^1_0(\Omega\setminus\Gamma)$, hence defines
a unique self-adjoint operator by the Friedrichs extension theorem.
\end{proof}

\subsection*{Microlocal Parametrix}
\begin{theorem}[Wave Kernel Parametrix]
For $g \in C^\infty_c(\mathbb{R})$ with Fourier transform
$\widehat{g}$ compactly supported, the operator $g(\sqrt{\mathcal{A}})$
has Schwartz kernel
\[
K_g(x,y) = \frac{1}{2\pi}\int_{\mathbb{R}} \widehat{g}(t) \cos(t\sqrt{\mathcal{A}})(x,y)\,dt,
\]
which admits a microlocal parametrix expansion near $(x,y)\notin \Gamma$
of the form
\[
K_g(x,y) \sim (2\pi)^{-d}\int_{\mathbb{R}^d} e^{i\langle x-y,\xi\rangle} a(x,y,\xi)\,d\xi,
\]
with amplitude $a(x,y,\xi)$ admitting asymptotic expansion in $|\xi|$.
\end{theorem}

\begin{remark}
Near the fracture set $\Gamma$, the parametrix requires correction terms
that depend on the local geometry of $\Gamma$ and the imposed boundary
conditions. These terms are essential for the localized trace formula.
\end{remark}

\subsection*{Localized Trace Representation}
\begin{proposition}[Localized Trace Formula, Preliminaries]
Let $\chi_T$ be a smooth cutoff supported in times $|t|\leq T$. Then
\[
\mathrm{Tr}\,\big(\chi_T(t)\cos(t\sqrt{\mathcal{A}})\big)
= \sum_{\gamma \in \mathcal{G}_{\leq T}} A_\gamma e^{i\ell(\gamma)} + R(T),
\]
where $\mathcal{G}_{\leq T}$ is the set of geodesics of length $\leq T$,
$A_\gamma$ are amplitudes depending on the geometry, and $R(T)$ is the
remainder controlled by microlocal analysis.
\end{proposition}

\subsection*{Key Lemmas}
\begin{lemma}[Elliptic Regularity Away from Fractures]
If $u \in \mathrm{Dom}(\mathcal{A})$ and $\Gamma$ is rectifiable, then
$u \in H^2_{\mathrm{loc}}(\Omega\setminus\Gamma)$.
\end{lemma}

\begin{lemma}[Propagation of Singularities]
For solutions of $(\partial_t^2 + \mathcal{A})u=0$, singularities
propagate along geodesics until they encounter $\Gamma$, where reflection
or absorption occurs depending on boundary conditions.
\end{lemma}

\subsection*{Mini-Audit (Block 7)}
\begin{enumerate}[label=(A\arabic*)]
  \item Core operator $\mathcal{A}$ defined precisely with domain.
  \item Self-adjointness established via Friedrichs extension.
  \item Microlocal parametrix introduced with expansion.
  \item Localized trace representation prepared for Chapter~4.
  \item Key lemmas stated: elliptic regularity and propagation.
\end{enumerate}

\subsection*{Sharpness Barriers}
\begin{itemize}
  \item If $\Gamma$ has positive measure, $H^1_0(\Omega\setminus\Gamma)$ may collapse.
  \item Without rectifiability, boundary terms in the parametrix are undefined.
  \item Spectral discreteness may fail on non-compact $\Omega$.
\end{itemize}

